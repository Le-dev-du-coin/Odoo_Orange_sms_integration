<odoo>

    <!-- View sms.sender View Tree -->
    <record id="view_sms_sender_tree" model="ir.ui.view">
        <field name="name">view.sms.sender.tree</field>
        <field name="model">sms.sender</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sms_id"/>
                <field name="recipient_phone_number"/>
                <field name="message"/>
                <field name="sent_at"/>
            </tree>
        </field>
    </record>

