    <!-- View sms.sender search -->
    <record id="view_sms_sender_search" model="ir.ui.view">
        <field name="name">view.sms.sender.search</field>
        <field name="model">sms.sender</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
